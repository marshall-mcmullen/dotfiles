general {
    colors = true
    interval = 5
}

order += "disk /"
order += "disk /home"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery 1"
order += "cpu_usage"
order += "load"
order += "tztime local"

disk "/" {
    format = "💾 %avail"
}

disk "/home" {
    format = "H: %avail"
}

ethernet _first_ {
    format_up = "ᯤ E: %ip"
    format_down = "ᯤ E: down"
}

wireless _first_ {
    format_up = "W:(%quality at %essid) %ip"
    format_down = "W: down"
}

battery 1 {
    format = "%status %percentage %remaining"
    format_down = "No battery"
    status_chr = "⚡ CHR"
    status_bat = "🔋 BAT"
    status_unk = "? UNK"
    status_full = "☻ FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
    integer_battery_capacity = true
    last_full_capacity = true
}

cpu_usage {
    format = "☢️ %usage"
    max_threshold = 75
    degraded_threshold = 50
}

load {
    format = "(%1min)"
}

tztime local {
    format = "📅 %Y-%m-%d %I:%M"
}


